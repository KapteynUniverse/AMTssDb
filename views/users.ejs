<%- include("partials/header.ejs") %>
  <body>

    <!-- Searchbar -->
    
      <form action="/search" method="get" class="search-bar">
        
        <input
          type="text"
          placeholder="Search for Movie/Anime/TV Show"
          name="search"
        />
        <button type="submit"><i class="fa fa-search"></i></button>
        <nav>
          <button class="menu" disabled>Menu</button>
          <div class="menu-content">
            <a  href="/" role="button">Home</a>
            <a  href="/watchlist">Watchlist</a>
            <a  href="/movies" role="button">Movies</a>
            <a  href="/tv-shows" role="button">TV Shows</a>
            <a  href="/users" role="button">Users</a>
            <a  href="/logout" role="button">Logout</a>
          </div>
        </nav>
      </form>
      
      <!-- Show search results -->
    
    
       
          <h1 class="title">SELECT AN USER TO VIEW THEIR AMTss</h1>
          <div class="grid-container-users">
            <% users.forEach(user => { %>
              <div class="user-card">
              <a href="/<%= user.user %>" > <p class="bold"> <%= user.userName %> </p>
                     <img class="profile-picture" src="https://cataas.com/cat?random=<%= Math.random() %>" alt="Profile Picture">  
              </a>
            </div>
            <% }) %>
              </div>
 
    <%-include("partials/footer.ejs") %>
  </body>
</html>
